<%= render "actions/force_dispatch/base" do |form| %>
    <div>
        <%= form.label :force_url, "URL for the new tab" %>
        <%= form.text_field :force_url, value: "https://portal.sbl.ch", class: "form-control" %>
    </div>
    <br>
    <div>
        <%= form.label :force_template, "Template URL used. Overrides field above" %>
        <%= form.select :force_template, open_tab_selections(@action_datum.get_data), {}, {class: "form-select"} %>
    </div>
    <br>
    <div>
        <%= form.label :force_amount, "Amount of tabs opened with the URL" %>
        <%= form.number_field :force_amount, { value: 1, min: 1, class: "form-control" } %>
    </div>
<% end %>