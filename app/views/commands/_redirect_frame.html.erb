<turbo-frame id="redirect">
    <div class="card" data-controller="<%= reset %>">
        <h4>Aktiven Tab weiterleiten</h4>
        <%= form_with do |form| %>
            <%= form.text_field :href, placeholder: "Link", class: "form-control" %>
            <br>
            <%= form.submit value: submit, class: "btn btn-primary btn-lg", "data-origin": "Weiterleiten", "data-reset-target": "text" %>
        <% end %>
    </div>
</turbo-frame>